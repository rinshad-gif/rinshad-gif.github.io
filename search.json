---
layout: null
---
[
{% assign all_items = site.products | concat: site.exclusive_products %}
{% for product in all_items %}
  {
    "title": {{ product.name | jsonify }},
    "url": {{ product.url | jsonify }},
    "category": {{ product.category | jsonify }},
    "description": {{ product.description | jsonify }},
    "price": {{ product.price | jsonify }},
    "offer": {{ product.offer | jsonify }},
    "image": {{ product.image | relative_url | jsonify }},
    "collection": "{{ product.collection }}"
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
